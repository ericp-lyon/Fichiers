<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.m2i.fichiers.MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE et LOAD FICHIERS"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etText1"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#0fd5dc"
        android:background="@color/colorAccent"
        android:textStyle="italic"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECRIRE MEMOIRE INTERNE"
        android:onClick="save"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECRIRE MEMOIRE EXTERNE"
        android:onClick="saveExterne"
        android:layout_marginTop="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etText2"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIRE MEMOIRE INTERNE"
        android:onClick="load"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIRE MEMOIRE EXTERNE"
        android:onClick="loadExterne"
        android:layout_marginTop="10dp"/>






</LinearLayout>
